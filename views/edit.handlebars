<form>
  <div className="mb-3" style="margin-top:10px;margin-bottom:10px">
    <label For="titleTextarea1" className="form-label"><b>Title</b></label>
    <textarea class="form-control" id="titleTextarea1" rows="1">{{title}}</textarea>
  </div>
  <div className="mb-3">
    <label For="contentTextarea1" className="form-label"><b>Content</b></label>
    <textarea class="form-control" id="contentTextarea1" rows="5">{{content}}</textarea>
  </div>
  <div id="blogId" data-id={{id}}></div>
  <div class="mb-6" style="margin-top:10px;margin-bottom:10px">
    <a href="#" class="card-link" id="updatePost">Update Post</a>
    <a href="#" class="card-link" id="deletePost">Delete Post</a>
  </div>
</form>

<script src="/js/update.js"></script>