{{#if logged_in}}
{{#each blogs as |blog|}}
<div class="row">
  <div class="col-mb-12">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">{{blog.title}}</h5>
        <p class="card-text">{{blog.content}}
        </p>
        <a href="/dashboard/blog/{{blog.id}}" class="card-link">Edit Post</a>
      </div>
    </div>
  </div>
</div>
{{/each}}
{{/if}}

<form>
  <div class="mb-3" style="margin-top:15px">
    <a href="/newpost" class="btn btn-primary">New Post</a>
  </div>
</form>