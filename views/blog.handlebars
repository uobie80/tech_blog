{{#if logged_in}}
<h4> Welcome {{firstname}} {{lastname}}!</h4>
{{/if}}

<div class="row g-5">
  <div class="col-md-12">
    <article class="blog-post">
      <h2 class="blog-post-title">{{title}}</h2>
      <p class="blog-post-meta">{{date_created}} by <a href="/blog/{{id}}">{{user.username}}</a></p>

      <p>{{content}}</p>

    </article>

    <h3 class="pb-4 mb-4 fst-italic border-bottom">
      Comments
    </h3>


    {{#each comments as |comment|}}
    <article class="blog-post">
      <p class="blog-post-meta">{{comment.date_created}} by {{comment.user.username}}</p>
      <p>{{comment.comment}}</p>
    </article>
    {{/each}}

  </div>
</div>






<form class="add-comment-form">
  <div className="mb-3">
    <label For="contentTextarea1" className="form-label">Comment</label>
    <textarea class="form-control" id="contentTextarea1" rows="5"></textarea>
  </div>
  <div class="mb-3">

    <button type="submit" class="btn btn-primary" style="margin-top:10px; margin-bottom:10px">Add Comment</button>
  </div>
</form>

<script src="/js/add-comment.js"></script>